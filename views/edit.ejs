<body>
  <div class="container" style="margin-top: 100px;">
    <h1>EDIT Flight Details Here</h1>
    <form action="/edit/<%= id %>" method="post">
      <div class="form-row">
        <div class="form-group col-md-8">
          <label for="inputEmail4">Origin</label>
          <input type="text" class="form-control" id="inputEmail4" placeholder="Origin" name="origin1" value="<%=origin%>" required>
        </div>
        <div class="form-group col-md-4">
          <label for="inputPassword4">Origin Code</label>
          <input type="text" class="form-control" id="inputPassword4" placeholder="Origin Code" name="ocode1" value="<%=ocode%>" required>
        </div>

      </div>
      <div class="form-row">
        <div class="form-group col-md-8">
          <label for="inputEmail4">Destination</label>
          <input type="text" class="form-control" id="inputEmail4" placeholder="Destination" name="destination1" value="<%=destination%>" required>
        </div>
        <div class="form-group col-md-4">
          <label for="inputEmail4">Destination Code</label>
          <input type="text" class="form-control" id="inputPassword4" placeholder="Destination Code" name="dcode1" value="<%=dcode%>" required>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputEmail4">Category</label>
          <input type="text" class="form-control" id="inputEmail4" placeholder="Flight Class" name="category1" value="<%=category%>" required>
        </div>
        <div class="form-group col-md-6">
          <label for="inputEmail4">Duration</label>
          <input type="text" class="form-control" id="inputPassword4" placeholder="Travel Duration" name="duration1" value="<%=duration%>" required>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-3">
          <label for="inputEmail4">Flight Date</label>
          <input type="date" class="form-control" id="inputCity" placeholder="Flight Date" name="ddate1" value="<%=ddate%>" required>
        </div>
        <div class="form-group col-md-3">
          <label for="inputEmail4">Refundable or Not</label>
          <input type="text" class="form-control" id="inputCity" placeholder="Refund / Non Refund" name="refund1" value="<%=refund%>" required>
        </div>
        <div class="form-group col-md-3">
          <label for="inputEmail4">Amount</label>
          <input type="text" class="form-control" id="inputZip" placeholder="Amount" name="amount1" value="<%=amount%>" required>
        </div>
        <div class="form-group col-md-3">
          <label for="inputEmail4">Flight Name</label>
          <input type="text" class="form-control" id="inputZip" placeholder="Flight Name" name="flname1" value="<%=flname%>" required>
        </div>
      </div>

      <button class="btn btn-primary" type="submit" name="button">Update Flight</button>
      <input class="form-control" type="hidden" name="_method" value="PUT" />
    </form>
  </div>


