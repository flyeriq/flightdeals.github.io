          <div class="card-footer text-muted">
            <span style="float: left"><%=flight[i].category%> <i class="bi bi-dot"></i> <i class="fas fa-calendar-alt"></i> <%=flight[i].ddate%><i class="bi bi-dot"></i> <i class="fas fa-rupee-sign"></i> <%=flight[i].amount%> <i
                class="bi bi-dot"></i><%=flight[i].refund%></span>
            <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
          </div>

        </div>
