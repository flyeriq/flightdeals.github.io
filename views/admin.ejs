        <h1>Flight</h1>
        <form action="/admin" method="POST">
          <div class="form-row">
            <div class="form-group col-md-8">
              <!-- <label for="inputEmail4">Flight Name From</label> -->
              <input type="text" class="form-control" id="inputEmail4" placeholder="Origin" name="origin1" required>
            </div>
            <div class="form-group col-md-4">
              <!-- <label for="inputPassword4">Flight Code From</label> -->
              <input type="text" class="form-control" id="inputPassword4" placeholder="Origin Code" name="ocode1" required>
            </div>

          </div>
          <div class="form-row">
            <div class="form-group col-md-8">
              <input type="text" class="form-control" id="inputEmail4" placeholder="Destination" name="destination1" required>
            </div>
            <div class="form-group col-md-4">
              <input type="text" class="form-control" id="inputPassword4" placeholder="Destination Code" name="dcode1" required>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <input type="text" class="form-control" id="inputEmail4" placeholder="Flight Class" name="category1" required>
            </div>
            <div class="form-group col-md-6">
              <input type="text" class="form-control" id="inputPassword4" placeholder="Travel Duration" name="duration1" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-3">
              Flight Date <i class="fas fa-calendar-alt"></i>
              <input type="date" class="form-control" id="inputCity" placeholder="Flight Date" name="ddate1" required>
            </div>
            <div class="form-group col-md-3">
              Refundable or Not
              <input type="text" class="form-control" id="inputCity" placeholder="Refund / Non Refund" name="refund1" required>
            </div>
            <div class="form-group col-md-3">
              <i class="fas fa-rupee-sign"></i> Rupees
              <input type="text" class="form-control" id="inputZip" placeholder="Amount" name="amount1" required>
            </div>
            <div class="form-group col-md-3">
              <i class="fas fa-plane"></i> Flight Name
              <input type="text" class="form-control" id="inputZip" placeholder="Indigo, Go Fast" name="flname1" required>
            </div>
          </div>

          <button class="btn btn-primary" type="submit" name="button" style="float: right">Add New Flight</button><br><br>
        </form>
